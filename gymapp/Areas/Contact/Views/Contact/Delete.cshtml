@model App.Models.Contacts.Contact
@using App.Menu
@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = "Xóa liên hệ";
}

<div class="container-fluid">
    <h1 class="mt-4">Có chắc chắn xóa liên hệ?</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xóa liên hệ</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index">Danh sách liên hệ</a>
        </div>

        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FullName)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class = "col-sm-2">
                        Ngày gửi
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.DateSent)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Message)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Message)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="Id" type="hidden" />
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>


@{
    _AdminSidebarService.SetActive("Contact", "Index", "Contact");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}