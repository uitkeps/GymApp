@model App.Models.Classes.Class
@using App.Menu
@inject AdminSidebarService _AdminSidebarService

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Xóa khóa tập";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa khóa tập</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdminCP" asp-area="AdminCP">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xóa khóa tập</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index">Danh sách khóa tập</a>
        </div>

        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.ClassTitle)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.ClassTitle)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.ClassDate)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.ClassDate)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.ClassPeriod)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.ClassPeriod)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Room.RoomName)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room.RoomName)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Instructor.Name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Instructor.Name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="RoomId" type="hidden" />
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

@{
    _AdminSidebarService.SetActive("Class", "Index", "Class");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}