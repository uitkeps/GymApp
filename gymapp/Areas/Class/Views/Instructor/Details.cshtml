@model App.Models.Classes.Instructor
@using App.Menu
@inject AdminSidebarService _AdminSidebarService
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chi tiết huấn luyện viên";
}

<div class="container-fluid">
    <h1 class="mt-4">Chi tiết huấn luyện viên</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdminCP" asp-area="AdminCP">Trang chủ</a></li>
        <li class="breadcrumb-item active">Chi tiết huấn luyện viên</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index">Danh sách huấn luyện viên</a>
        </div>

        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class = "col-sm-2">
                        Tên huấn luyện viên
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.DateOfBirth)
                    </dd> <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Expertise)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Expertise)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Salary)
                    </dt>
                    <dd class = "col-sm-10">
                        @Math.Round(Model.Salary, 0) VNĐ
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@{
    _AdminSidebarService.SetActive("Instructor", "Index", "Class");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}