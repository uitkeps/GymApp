@model App.Models.Classes.Room
@using App.Menu
@inject AdminSidebarService _AdminSidebarService
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chi tiết phòng tập";
}

<div class="container-fluid">
    <h1 class="mt-4">Chi tiết phòng tập</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdminCP" asp-area="AdminCP">Trang chủ</a></li>
        <li class="breadcrumb-item active">Chi tiết phòng tập</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index">Danh sách phòng tập</a>
        </div>

        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class = "col-sm-2">
                        Mã phòng tập
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.RoomId)
                    </dd>
                    <dt class = "col-sm-2">
                        Tên phòng tập
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.RoomName)
                    </dd> <dt class="col-sm-2">
                        Sức chứa
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Capacity)
                    </dd>
                </dl>
                @*<dl class="row">
                    <a class="btn btn-success btn-sm mr-1" asp-action="Edit" asp-route-id="@Model.RoomId">Cập nhật</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model.RoomId">Xóa</a>
                </dl>*@
            </div>
        </div>
    </div>
</div>

@{
    _AdminSidebarService.SetActive("Room", "Index", "Class");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}